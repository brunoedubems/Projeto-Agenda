<% if(errors.lenght > 0) { %>
<div class="row">
    <div class="col my-3">
      <div class="alert alert-danger">
        <% errors.forEach(erro => { %>
            <%= erro %><br>
            <% }); %>
      </div>
    </div>
  </div>

  <% } %>

<% if(success.lenght > 0) { %>
<div class="row">
    <div class="col my-3">
      <div class="alert alert-success">
        <% success.forEach(erro => { %>
            <%= success %><br>
            <% }); %>
      </div>
    </div>
  </div>

  <% } %>